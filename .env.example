# Application Settings
APP_NAME=MowthosOS
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API Settings
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Configuration
POSTGRES_USER=mowthos
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mowthos_db
DATABASE_URL=postgresql+asyncpg://mowthos:your_secure_password_here@localhost:5432/mowthos_db

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_USE_SSL=false

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
SECRET_KEY=your-secret-key-for-other-crypto-operations
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Mammotion Integration
MAMMOTION_ACCOUNT=your_mammotion_account
MAMMOTION_PASSWORD=your_mammotion_password

# Mapbox Integration
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Stripe Integration (for future billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
EMAIL_FROM_ADDRESS=noreply@mowthos.com
EMAIL_FROM_NAME=MowthosOS

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cluster Settings
DEFAULT_CLUSTER_RADIUS_METERS=80
MAX_CLUSTER_NEIGHBORS=10
MIN_CLUSTER_NEIGHBORS=1

# Maintenance Settings
MAINTENANCE_CHECK_HOURS=50
BLADE_REPLACEMENT_HOURS=200