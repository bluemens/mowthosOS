# MowthosOS Frontend Environment Variables
# Copy this file to .env.local (or .env) and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
# For production: https://api.mowthos.com

# Stripe Configuration
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_test_key_here
# Get from: https://dashboard.stripe.com/test/apikeys

# Mapbox Configuration
VITE_MAPBOX_TOKEN=pk.your_mapbox_token_here
# Get from: https://account.mapbox.com/access-tokens/

# Error Tracking (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Get from: https://sentry.io/settings/your-org/projects/your-project/keys/

# App Configuration
VITE_APP_NAME=MowthosOS
VITE_APP_VERSION=1.0.0

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_MOCK_API=false